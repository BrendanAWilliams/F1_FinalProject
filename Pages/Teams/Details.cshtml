@page
@model F1_FinalProject.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Base)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Base)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Chief)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Chief)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Chasis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Chasis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.PowerUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.PowerUnit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.FirstEntry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.FirstEntry)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Championships)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Championships)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.PolePositions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.PolePositions)
        </dd>
    </dl>
    <h4>Drivers</h4>
    <hr />
    <dl class="row">
        @foreach(var d in Model.Team.Drivers)
        {
        <dd class="col-sm-10">
            #@Html.DisplayFor(model => d.Number) @Html.DisplayFor(model => d.FirstName) @Html.DisplayFor(model => d.LastName) 
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.TeamID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
